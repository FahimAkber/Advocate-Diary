        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.latentsoft.advocatenote.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name="com.latentsoft.advocatenote.SignUpActivity" />
        <activity android:name="com.latentsoft.advocatenote.LogInActivity" />
        <activity android:name="com.latentsoft.advocatenote.CaseDetailsActivity" />
        <activity
            android:name="com.latentsoft.advocatenote.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.latentsoft.advocatenote.AddCaseActivity"/>


        <activity android:name="com.latentsoft.advocatenote.AddHearingActivity"></activity>
    </application>

</manifest>