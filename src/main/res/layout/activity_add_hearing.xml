<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".AddHearingActivity">

    <EditText
        android:id="@+id/et_comment"
        android:hint="Comment"
        android:textSize="22sp"
        android:inputType="text"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_step"
        android:hint="Next Step"
        android:inputType="text"
        android:textSize="22sp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_next_hearing"
        android:hint="Next Hearing"
        android:textSize="22sp"
        android:background="#ccc"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_add_to_dairy"
        android:text="Add To Diary"
        android:textSize="22sp"
        android:padding="15dp"
        android:textColor="#3f6073"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>